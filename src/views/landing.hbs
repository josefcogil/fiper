<div class="load">
    <div id="loader"></div>
</div>

<!--HEADER-->
<section class="header">
    <div class="container">
        <!--NAVBAR-->
        <nav class="navbar navbar-expand-lg navbar-dark">
            <a class="navbar-brand ml-2" href="#">
                <span>Fiper</span>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01"
                aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/signup">Signup</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/login">Login</a>
                    </li>
                </ul>
            </div>
        </nav>
        <!--/NAVBAR-->
    </div>

    <!--TITLE-->
    <div class="title-container">
        <div class="title">
            <h3 class="text-white">Are you looking for a <span>developer</span>?</h3>

            <div class="buttons mt-5">
                <a href="/signup"><button class="btn btn-danger" id="rec">Yes!</button></a>
                <a href="/signup"><button class="btn btn-outline-danger" id="dev">I'm a developer</button></a>
            </div>
        </div>
    </div>
    <!--/TITLE-->
</section>
<!--/HEADER-->


<!--ABOUT-->
<section id="about" class="about hide">
    <h3 class="text-center">Fiper</h3>

    <div class="text">
        <p class="text-center text-uppercase text-secondary">
            Is a web application where you can find developers that suit your needs.
        </p>
        <p class="text-center text-uppercase text-secondary">
            If you're a developer, you can sign up so others can find you within the app and contact you.
        </p>
    </div>

    <div class="buttons text-center">
        <a href="/signup">
            <button class="btn btn-outline-danger ml-4" id="start">
                Get started
                <span>
                    <i class="fas fa-arrow-right fas-md ml-2"></i>
                </span>
            </button>
        </a>
    </div>
</section>
<!--/ABOUT-->

<script>
    document.addEventListener("DOMContentLoaded", () => {
        setTimeout(() => {
            document.querySelector('.load').classList.add('hide');
            document.querySelector('#about').classList.remove('hide');

            localStorage.removeItem('login');

            swal({
                title: "Importante!",
                text: "Esta es una version de prueba, por lo que algunas caracteristicas de la app aún no se encuentran disponibles. Está en inglés :D",
                icon: "info"
            });
        }, 3000)
    });

    document.getElementById('rec').addEventListener('click', () => {
        localStorage.setItem('role', 'Recruiter');
    })

    document.getElementById('dev').addEventListener('click', () => {
        localStorage.setItem('role', 'Developer');
    })

    document.getElementById('start').addEventListener('click', () => {
        if (localStorage.getItem('role')) {
            localStorage.removeItem('role');
        }
    })
</script>